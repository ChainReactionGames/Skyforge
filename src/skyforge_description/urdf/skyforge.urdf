<?xml version="1.0"?>
<robot name="three_link_arm_flat">
  <!-- Used to give the base a prismatic connection to the world (fixed except in y direction) -->
  <link name="world"/>
  <!-- 1 DOF base (joint will be added at bottom)-->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.4 0.4 0.2"/>
      </geometry>

      <origin xyz="0 0 0"/>

      <material name="grey">
        <color rgba="0.6 0.6 0.6 1"/>
      </material>
      
    </visual>
    
    <collision>
      <geometry>
        <box size="0.4 0.4 0.2"/>
      </geometry>

      <origin xyz="0 0 0"/>

    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>

      <mass value="1.0"/>

      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>

    </inertial>

  </link>

  <!-- Link 1 -->
  <link name="link1">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.6"/>
      </geometry>
      <!-- Rotate cylinder so it lies along X-axis -->
      <origin xyz="0.3 0 0" rpy="0 1.5708 0"/>

      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>

    </visual>

    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.6"/>
      </geometry>
      
      <origin xyz="0.3 0 0" rpy="0 1.5708 0"/>

    </collision>

    <inertial>
      <origin xyz="0.3 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.00125" ixy="0.0" ixz="0.0" iyy="0.0306" iyz="0.0" izz="0.0306"/>
    </inertial>
  </link>

  <!-- Link 2 -->
  <link name="link2">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.6"/>
      </geometry>

      <origin xyz="0.3 0 0" rpy="0 1.5708 0"/>

      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>

    </visual>

    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.6"/>
      </geometry>

      <origin xyz="0.3 0 0" rpy="0 1.5708 0"/>

    </collision>

    <inertial>
      <origin xyz="0.3 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.00125" ixy="0.0" ixz="0.0" iyy="0.0306" iyz="0.0" izz="0.0306"/>
    </inertial>
  </link>

  <!-- Link 3 -->
  <link name="link3">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.6"/>
      </geometry>

      <origin xyz="0.3 0 0" rpy="0 1.5708 0"/>

      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>

    </visual>

    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.6"/>
      </geometry>

      <origin xyz="0.3 0 0" rpy="0 1.5708 0"/>
      
    </collision>

    <inertial>
      <origin xyz="0.3 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.00125" ixy="0.0" ixz="0.0" iyy="0.0306" iyz="0.0" izz="0.0306"/>
    </inertial>

  </link>

  <!-- Prismatic joints -->
  <joint name="world_to_base" type="prismatic">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0"/>
    <axis xyz="0 1 0"/> <!-- movement along Y -->
    <limit lower="-5.0" upper="5.0" effort="50" velocity="5.0"/>
  </joint>

  <!-- Revolute joints -->
  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0.2 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="100000" velocity="100000" lower="-3.14" upper="3.14"/>
  </joint>

  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0.6 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="100000" velocity="100000" lower="-1.57" upper="1.57"/>
  </joint>

  <joint name="joint3" type="revolute">
    <parent link="link2"/>
    <child link="link3"/>
    <origin xyz="0.6 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="100000" velocity="100000" lower="-1.57" upper="1.57"/>
  </joint>


  <ros2_control name="GazeboSimSystem" type="system">
    <hardware>
     <plugin>gz_ros2_control/GazeboSimSystem</plugin>
   </hardware>
   <joint name="world_to_base">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
   </joint>

   <joint name="joint1">
      <command_interface name="effort">
        <param name="min">-100000</param>
        <param name="max">100000</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">0</param>
      </state_interface>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>

   </joint>

   <joint name="joint2">
      <command_interface name="effort">
        <param name="min">-100000</param>
        <param name="max">100000</param>
      </command_interface>
     <state_interface name="position">
        <param name="initial_value">0</param>
     </state_interface>
     <state_interface name="velocity"/>
     <state_interface name="effort"/>
   </joint>

    <joint name="joint3">
      <command_interface name="effort">
        <param name="min">-100000</param>
        <param name="max">100000</param>
      </command_interface>
     <state_interface name="position"/>
     <state_interface name="velocity"/>
     <state_interface name="effort"/>
    </joint>
  </ros2_control>
<gazebo>
  <plugin filename="/opt/ros/jazzy/lib/libgz_ros2_control-system.so" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
    <parameters>/home/dwidjaja/Desktop/Skyforge/src/skyforge_controllers/config/three_link_arm_controllers.yaml</parameters>
  </plugin>
</gazebo>

</robot>

